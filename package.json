{
  "name": "pdf-lib",
  "version": "0.0.0",
  "description": "Library for creating and editing PDF files in JavaScript",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "build": "gulp build",
    "lint": "./node_modules/eslint/bin/eslint.js -c ./.eslintrc src/* --fix",
    "test:integration:creation": "gulp build && node ./dist/integration-tests/creation/test1.js",
    "test:integration:modification": "gulp build && node ./dist/integration-tests/modification/test1.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hopding/pdf-lib.git"
  },
  "author": "Andrew Dillon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Hopding/pdf-lib/issues"
  },
  "homepage": "https://github.com/Hopding/pdf-lib#readme",
  "dependencies": {
    "buffer": "^5.0.8",
    "file": "^0.2.2",
    "fontkit": "git+https://github.com/Hopding/fontkit.git#2a72a95ad294874470ba1adbb957bef1f8c4c8d8",
    "lodash": "^4.17.4",
    "pako": "^1.0.6",
    "png-js": "git+https://github.com/Hopding/png.js.git#c6f0917865029d39c039a143d600a81ff84eadac"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.106",
    "@types/node": "^9.6.0",
    "@types/pako": "^1.0.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.7.2",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^2.3.1",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.1",
    "gulp-typescript": "^4.0.1",
    "jest": "^22.4.3",
    "prettier": "^1.7.0",
    "ts-jest": "^22.4.2",
    "typescript": "^2.7.2"
  },
  "jest": {
    "transform": {
      "^.+$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))$",
    "testPathIgnorePatterns": [
      "<rootDir>/integration-tests/",
      "<rootDir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  }
}
