{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["es2017"],
    "types": ["node"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ],
      "core/*": ["src/core/*"],
      "utils/*": ["src/utils/*"],
      "utils": ["src/utils/index.ts"]
    }
  },
  "include": [
    "src/**/*",
    "__integration_tests__/**/*",
    "index.ts"
  ]
}
